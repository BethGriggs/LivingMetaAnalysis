<html>

<head>
  <title>Living Meta Analysis</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/vendor/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="stylesheet" media="screen" href="vendor/handsontable.full.min.css">
  <script src="/vendor/angular.min.js"></script>
  <script src="/vendor/angular-ui-router.min.js"></script>
  <script src="/javascripts/angularApp.js"></script>
  <script src="vendor/handsontable.full.min.js"></script>
  <script src="vendor/ngHandsontable.min.js"></script>
</head>

<body ng-app="livingmetaanalysis" class="loaded">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#/home">LivingMetaAnalysis</a>
      </div>

      <div class="collapse navbar-collapse">

        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown"><a href="#"><i  class="fa fa-plus fa-2x"> <span class="caret"></i></a></li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Joe Bloggs <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li role="separator" class="divider"></li>
              <li><a href="#">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>

  <div class="container">
    <ui-view></ui-view>
  </div>

  <!-- ================================================
      Scripts
      ================================================ -->

  <!-- jQuery Library -->
  <script src="vendor/jquery-2.2.0.min.js"></script>
  <script src="javascripts/bootstrap.min.js"></script>

  <script type="text/ng-template" id="/home.html">

    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title pull-left">
            <a href="#/metaanalyses">Meta-Analyses</a>
          </h3>
          <a type="button" class="btn btn-success pull-right" href="#/metaanalyses/create">
            <i class="fa fa-plus"></i>New
          </a>
          <div class="clearfix"></div>
        </div>
        <div class="panel-body">
          <ul>
            <li ng-repeat="userMetaAnalysis in userMetaAnalyses"><a ng-href="#/metaanalyses/{{userMetaAnalysis._id}}">{{userMetaAnalysis.title}}</a></li>
          </ul>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title pull-left">Interpretations</h3>
          <a type="button" class="btn btn-success pull-right" href="#/studies/create"><i class="fa fa-plus"></i> New</a>
          <div class="clearfix"></div>
        </div>
        <div class="panel-body">
          <ul>
          </ul>
        </div>
      </div>
    </div>
  </script>

  <script type="text/ng-template" id="/metaanalyses.html">
    <h1>metaanalyses template</h1>
    <p>
      <div ng-repeat="metaAnalysis in metaAnalyses track by $index">{{metaAnalysis}}</div>
    </p>
  </script>

  <script type="text/ng-template" id="metaanalyses/create.html">

    <div ng-submit="newMetaAnalysis()" class="row">

      <form class="form-horizontal">
        <fieldset>

          <!-- Form Name -->
          <legend>Create new meta-analysis</legend>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-4 control-label" for="title">Title</label>
            <div class="col-md-6">
              <input id="title" name="title" ng-model="title" type="text" placeholder="title of meta-analysis" class="form-control input-md" required="">

            </div>
          </div>

          <!-- Textarea -->
          <div class="form-group">
            <label class="col-md-4 control-label" for="description">Description</label>
            <div class="col-md-4">
              <textarea class="form-control" id="description" ng-model="description" name="description"></textarea>
            </div>
          </div>

          <!-- Search input-->
          <div class="form-group">
            <label class="col-md-4 control-label" for="tags">Tags</label>
            <div class="col-md-6">
              <input id="tags" name="tags" ng-model="tags" type="search" placeholder="tags" class="form-control input-md" required="">

            </div>
          </div>

          <!-- Button -->
          <div class="form-group pull-right">
            <label class="col-md-4 control-label" for="create"></label>
            <div class="col-md-4">
              <button id="create" name="create" class="btn btn-success"><i class="fa fa-plus"></i> Create</button>
            </div>
          </div>

        </fieldset>
      </form>
    </div>

  </script>

  <script type="text/ng-template" id="/metaanalysis.html">
    <h1> {{ metaAnalysis.title}}
    <button ng-click="log()" class="btn btn-success pull-right">Apply Statistics <i class="fa fa-arrow-right"></i></button>
    </h1>

    <div class="well">
      <p>{{ metaAnalysis.description }}</p>
    </div>



    <hot-table
        settings="settings"
        min-spare-rows="minSpareRows"
        col-headers="true"
        datarows="testArray">
      <hot-column title="'Property'"></hot-column>
      <hot-column ng-repeat="study in studies" title="study"></hot-column>
    </hot-table>

    <style type="text/css">
    /* change width CSS */
    .handsontable col.rowHeader {
        width: 15em;
    }
    </style>

    <div class="row">
      <button ng-click="existingStudy = !existingStudy" class="btn btn-primary"><i class="fa fa-search"></i> Search for existing study</button>
      <button ng-click="showNewStudyForm = !showNewStudyForm" class="btn btn-primary"><i class="fa fa-plus"></i> Add new study</button>
      <button ng-click="addInterpretation()" class="btn btn-primary"><i class="fa fa-plus"></i> Add Interpretation</button>
      <button ng-click="updateMetaAnalysis()" class="btn btn-primary">Save</a>
    </div>

    <div ng-show="showNewStudyForm" ng-controller="StudiesCtrl">
      <div class="well">
        <div class="row">
          <form ng-submit="addStudy()" class="form-horizontal">
            <fieldset>
              <!-- Form Name -->
              <legend>Add new study</legend>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="title">Title</label>
                <div class="col-md-6">
                  <input id="title" name="title" ng-model="title" type="text" placeholder="title of article/study/experiment" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="author">Author</label>
                <div class="col-md-6">
                  <input id="author" name="author" ng-model="author" type="text" placeholder="author" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="year">Year</label>
                <div class="col-md-2">
                  <input id="year" name="year" ng-model="year" type="text" placeholder="yyyy" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="tags">Tags</label>
                <div class="col-md-6">
                  <input id="tags" name="tags" type="text" placeholder="tags" class="form-control input-md">

                </div>
              </div>

              <!-- Button -->
              <div class="form-group pull-right">
                <div class="col-md-4">
                  <button id="study" name="study" class="btn btn-success"><i class="fa fa-plus"></i> Study</button>
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>

    <div ng-show="existingStudy">
      <div class="well">
        <h1> Add existing study</h1>

        <div class="row">
          <!-- /.col-lg-6 -->
          <div class="col-lg-6">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search for...">
              <span class="input-group-btn">
              <button class="btn btn-default" type="button">Search</button>
            </span>
            </div>
            <!-- /input-group -->
          </div>
          <!-- /.col-lg-6 -->
        </div>
        <!-- /.row -->
      </div>
    </div>
  </script>
</body>

</html>
