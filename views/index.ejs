<html>

<head>
  <title>Living Meta Analysis</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/vendor/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="stylesheet" media="screen" href="vendor/handsontable.full.min.css">
  <link rel="stylesheet" href="vendor/ng-tags-input.min.css">
  <script src="/vendor/angular.min.js"></script>
  <script src="/vendor/angular-ui-router.min.js"></script>
  <script src="/javascripts/angularApp.js"></script>
  <script src="vendor/handsontable.full.min.js"></script>
  <script src="vendor/ngHandsontable.min.js"></script>
  <script type="text/javascript" src="vendor/ng-tags-input.min.js"></script>

</head>

<body ng-app="livingmetaanalysis" class="loaded">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#/home">LivingMetaAnalysis</a>
      </div>

      <div class="collapse navbar-collapse">

        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown"><a href="#"><i  class="fa fa-plus fa-2x"> <span class="caret"></i></a></li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Joe Bloggs <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li role="separator" class="divider"></li>
              <li><a href="#">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>

  <div class="container">
    <ui-view></ui-view>
  </div>

  <!-- ================================================
      Scripts
      ================================================ -->

  <!-- jQuery Library -->
  <script src="vendor/jquery-2.2.0.min.js"></script>
  <script src="javascripts/bootstrap.min.js"></script>

  <script type="text/ng-template" id="/home.html">

    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title pull-left">
            <a href="#/metaanalyses">Meta-Analyses</a>
          </h3>
          <a type="button" class="btn btn-success pull-right" href="#/metaanalyses/create">
            <i class="fa fa-plus"></i>New
          </a>
          <div class="clearfix"></div>
        </div>
        <div class="panel-body">
          <ul>
            <li ng-repeat="userMetaAnalysis in userMetaAnalyses"><a ng-href="#/metaanalyses/{{userMetaAnalysis._id}}">{{userMetaAnalysis.title}}</a></li>
          </ul>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title pull-left">DerivedData</h3>
          <a type="button" class="btn btn-success pull-right" href="#/studies/create"><i class="fa fa-plus"></i> New</a>
          <div class="clearfix"></div>
        </div>
        <div class="panel-body">
          <ul>
          </ul>
        </div>
      </div>
    </div>
  </script>

  <script type="text/ng-template" id="metaanalyses/create.html">

    <div ng-submit="newMetaAnalysis()" class="row">

      <form class="form-horizontal">
        <fieldset>

          <legend>Create new meta-analysis</legend>

          <div class="form-group">
            <label class="col-md-4 control-label" for="title">Title</label>
            <div class="col-md-6">
              <input id="title" name="title" ng-model="title" type="text" placeholder="title of meta-analysis" class="form-control input-md" required="">
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="description">Description</label>
            <div class="col-md-4">
              <textarea class="form-control" id="description" ng-model="description" name="description"></textarea>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="tags">Tags</label>
            <div class="col-md-6">
              <tags-input ng-model="tags"></tags-input>
            </div>
          </div>

          <div class="form-group pull-right">
            <label class="col-md-4 control-label" for="create"></label>
            <div class="col-md-4">
              <button id="create" name="create" class="btn btn-success"><i class="fa fa-plus"></i> Create</button>
            </div>
          </div>

        </fieldset>
      </form>
    </div>

  </script>

  <script type="text/ng-template" id="/metaanalysis.html">
    <h1> {{ metaAnalysis.title}}
    <button ng-click="log()" class="btn btn-success pull-right">Apply Statistics <i class="fa fa-arrow-right"></i></button>
    </h1>

    <div class="well">
      <p>{{ metaAnalysis.description }}</p>
    </div>

    <hot-table hot-id="handsontable1" settings="settings" min-spare-rows="minSpareRows" columns="colArray" col-headers="true" datarows="testArray">
    </hot-table>

    <style type="text/css">
      /* change width CSS */

      .handsontable col.rowHeader {
        width: 15em;
      }
    </style>

    <div class="row">
      <button ng-click="existingStudy = !existingStudy" class="btn btn-primary"><i class="fa fa-search"></i> Search for existing study</button>
      <button ng-click="addInterpretation()" class="btn btn-primary"><i class="fa fa-plus"></i> Add Interpretation</button>
      <button ng-click="updateMetaAnalysis()" class="btn btn-primary">Save</a>
      <button ng-click="addStudy()" class="btn btn-primary">Add study (test)</a>

    </div>

    <!--  trigger new study modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addNewStudyModal">
      <i class="fa fa-plus"></i> Add new study
    </button>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addExistingStudyModal">
      <i class="fa fa-search"></i> Search for existing studies
    </button>

    <!-- Modal -->
    <div class="modal fade" id="addNewStudyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="addNewStudyModal">Add new study</h4>
          </div>
          <div class="modal-body">
            <form class="form-horizontal">
              <fieldset>
                <!-- Text input-->
                <div class="form-group">
                  <label class="col-md-4 control-label" for="title">Title</label>
                  <div class="col-md-6">
                    <input id="title" name="title" ng-model="title" type="text" placeholder="title of article/study/experiment" class="form-control input-md" required="">

                  </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                  <label class="col-md-4 control-label" for="author">Author</label>
                  <div class="col-md-6">
                    <input id="author" name="author" ng-model="author" type="text" placeholder="author" class="form-control input-md" required="">

                  </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                  <label class="col-md-4 control-label" for="year">Year</label>
                  <div class="col-md-2">
                    <input id="year" name="year" ng-model="year" type="text" placeholder="yyyy" class="form-control input-md" required="">

                  </div>
                </div>

                <!-- Search input-->
                <div class="form-group">
                  <label class="col-md-4 control-label" for="tags">Tags</label>
                  <div class="col-md-6">
                    <tags-input ng-model="tags"></tags-input>
                  </div>
                </div>

              </fieldset>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-success" ng-click="addNewStudy()" data-dismiss="modal"><i class="fa fa-plus"></i> Add Study</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addExistingStudyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="addNewStudyModal">Search for existing studies</h4>
          </div>
          <div class="modal-body">
            <div class="input-group">
              <div ng-controller="StudiesCtrl">

                <!-- The search box puts the term into $scope.searchTerm and calls $scope.search() on submit -->

                <section class="searchField">
                  <form>
                    <div class="input-group">
                      <input type="text" class="form-control" ng-model="searchTerm">
                      <span class="input-group-btn">
                        <button class="btn btn-default" type="button" ng-click="search()">Search by tag <i class="fa fa-search"></i></button>
                      </span>
                    </div>
                  </form>
                </section>

                <!-- show the list of results-->
                <section>
                <ul>
                  <li ng-repeat="study in searchResults"><a href="#/studies/{{study._id}}"> {{study.title}}</a></li>
                </ul>
                </section>
                </span>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
  </script>


  <script type="text/ng-template" id="/study.html">
        <h1>{{study.title}}</h1>
        <p>Author : {{study.author}} </p>
        <p>Year published: {{study.year}} </p>
        <p> Derived Data: {{study.derivedData}}<p>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addStudyData">
        <i class="fa fa-plus"></i> Add study data
        </button>

        <!-- Modal -->
        <div class="modal fade" id="addStudyData" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addNewStudyModal">Add data to study</h4>
              </div>
              <div class="modal-body">
                <div class="input-group">
                  <div ng-controller="StudiesCtrl">
                  </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
  </script>
</body>

</html>
